<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping 	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping package="com.neodem.madness.db.beans"><class name="Conference" table="Conference">		<id name="id" column="conferenceID" type="long">		<generator class="native"/>	</id>		<property name="name" column="name" type="string" not-null="true"/>		</class><query name="QueryGetAllConferencesByName"><![CDATA[FROM Conference c WHERE c.name = :name]]></query></hibernate-mapping>