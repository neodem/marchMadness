<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping 	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping package="com.neodem.recipe.db.beans"><class name="Ingredient" table="Ingredient">		<id name="id" column="ingredientID" type="long" unsaved-value="0">		<generator class="native"/>	</id>		<property name="name" column="name" type="string"/>	<property name="brand" column="brand" type="string"/>		<property name="notes" column="notes" type="string"/>	 	<set name="recipeIngredients" inverse="true" cascade="all-delete-orphan">		<key column ="ingredientID"/>		<one-to-many class="RecipeIngredient"/>    </set>    			</class><query name="QueryGetAllLikeName"><![CDATA[FROM com.neodem.recipe.db.beans.Ingredient i WHERE i.name like :searchName]]></query></hibernate-mapping>