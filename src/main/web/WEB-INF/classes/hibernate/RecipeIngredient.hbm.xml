<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping 	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping package="com.neodem.recipe.db.beans"><class name="RecipeIngredient" table="RecipeIngredient">		<id name="id" column="recipeIngredientID" type="long">		<generator class="native"/>	</id>		<property name="amount" column="amount" type="float"/>	<property name="details" column="details" type="string"/>	<many-to-one name="unit" column="unitType" class="Unit"/>	<many-to-one name="recipe" column="recipeID" class="Recipe" not-null="true"/>	<many-to-one name="ingredient" column="ingredientID" class="Ingredient" not-null="true"/></class></hibernate-mapping>