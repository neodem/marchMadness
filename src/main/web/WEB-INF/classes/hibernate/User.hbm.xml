<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping 	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping package="com.neodem.recipe.db.beans"><class name="User" table="User">		<id name="id" column="userID" type="long">		<generator class="native"/>	</id>		<property name="username" column="username" type="string"/>	<property name="password" column="password" type="string"/>			</class><query name="QueryGetAllUserRecordsByUsername"><![CDATA[FROM com.neodem.recipe.db.beans.User u WHERE u.username = :username]]></query></hibernate-mapping>